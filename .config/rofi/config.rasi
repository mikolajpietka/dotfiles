configuration {
	modi: "drun,run,window";
	show-icons: false;
	drun-match-fields: "all";
	drun-display-format: "{name}"; 
	window-format: "{w}	{t}";
	disable-history: false;
	kb-delete-entry: "Control+q";
	terminal: "alacritty";
	max-history-size: 20;
    font: "UbuntuMono 15";
}
@theme "themes/squared-nord"
